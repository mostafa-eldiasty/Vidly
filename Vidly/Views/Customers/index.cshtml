@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count() == 0)
{
    <text>We donn't have any customers yet.</text>

}
else
{
<table class="table">
    <tr>
        <th>
            Customer
        </th>
    </tr>

    @foreach (var customer in Model)
    {
        <tr>
            <td>
                <a href="/Customers/Details/@customer.Id">@Html.DisplayFor(modelcustomer => customer.Name)</a>
            </td>
        </tr>
    }

</table>
    
}
